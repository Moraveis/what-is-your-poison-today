datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Ingridient {
  id String @id @default(uuid())
  name String
  description String

  recipes IngridientsOnRecipe[]

  @@map("ingridients")
}

model Recipe {
  id String @id @default(uuid())
  name String
  how_to_prepare String

  ingridients IngridientsOnRecipe[]

  @@map("recipes")

}

model IngridientsOnRecipe {
  ingridient Ingridient @relation(fields: [ingridient_id], references: [id])
  ingridient_id String
  recipe Recipe @relation(fields: [recipe_id], references: [id])
  recipe_id String
  quantity Float

  @@id([ingridient_id, recipe_id])
}

